{
  "name": "instaquiz",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node -r dotenv/config src/index.js",
    "dev": "run-p dev:teachers dev:server",
    "dev:teachers": "run-p teachers:build teachers:serve",
    "teachers:build": "rollup -c teachers/rollup.config.js -w",
    "teachers:serve": "sirv teachers/public --single --dev --port 5010",
    "dev:students": "run-p students:build students:serve",
    "students:build": "rollup -c students/rollup.config.js -w",
    "students:serve": "sirv students/public --single --dev --port 5011",
    "dev:server": "nodemon -e js,graphql -x node -r dotenv/config src/index.js",
    "debug": "nodemon -e js,graphql -x node --inspect -r dotenv/config src/index.js",
    "nodemon": "nodemon --config nodemon.json",
    "build": "npm run build:teachers && npm run build:students && npm run build:server",
    "build:teachers": "rollup -c teachers/rollup.config.js",
    "build:students": "rollup -c students/rollup.config.js",
    "build:server": "export $(cat .env | xargs) && prisma generate",
    "deploy": "export $(cat .env | xargs) && prisma deploy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
